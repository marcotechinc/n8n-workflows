      "parameters": {
        "jsCode": "const groups = {};\n\nfor (const item of items) {\n  const topic = item.json.topic || 'UNKNOWN';\n\n  if (!groups[topic]) {\n    groups[topic] = [];\n  }\n\n  groups[topic].push({\n    id: item.json.id,\n    source: item.json.source,\n    title: item.json.title,\n    event_time: item.json.event_time || item.json.date\n  });\n}\n\nreturn Object.entries(groups).map(([topic, records]) => ({\n  json: {\n    topic,\n    records\n  }\n}));"
      },
